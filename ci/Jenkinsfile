pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                env.JAVA_HOME="${tool 'JDK 11'}"
                env.PATH="${env.JAVA_HOME}/bin:${env.PATH}"
                sh 'java -version'
                sh 'ls'
                sh 'sh gradlew -Dorg.gradle.daemon=true -Dorg.gradle.parallel=true clean build -Penv=uat'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}