pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                tools {
                    jdk "JDK 11"
                }
                sh 'java -version'
                sh 'ls'
                sh 'sh gradlew -Dorg.gradle.daemon=true -Dorg.gradle.parallel=true clean build -Penv=uat'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}