pipeline {
    agent any

    tools {
        jdk 'JDK 11'
    }
    stages {
        stage('Build') {
            steps {
                sh 'java -version'
                sh 'ls'
                sh 'sh gradlew -Dorg.gradle.daemon=true -Dorg.gradle.parallel=true clean build -Penv=uat'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}